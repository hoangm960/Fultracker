---
import Button from "@components/Button.astro";
import DashboardLayout from "@layouts/DashboardLayout.astro";
import DeleteIcon from "@assets/icons/delete.png";
---

<DashboardLayout page="settings">
    <div class="h-full w-full flex flex-row">
        <Button classes="delete-all" theme="destructive" isfilled>
            <img class="h-16" src={DeleteIcon.src} alt="delete-icon">
            <span class="font-bold">RESET DATA</span>
        </Button>
    </div>
</DashboardLayout>

<script>
    const deleteAllBtn = document.querySelector(".delete-all");
    deleteAllBtn.addEventListener("click", () => {
        if (confirm("Are you sure you want to reset all your data?")) {
            localStorage.clear();
        }
    });
</script>