---
const { name, type } = Astro.props;
---

<div class="inputField">
    <div class="title">
        <p>{name}</p>
    </div>
    <input type={type} name={type} id={type} autocomplete="off"/>
</div>

<style>
    .inputField {
        position: relative;
        width: 100%;
        height: 18%;
        margin-bottom: 30px;
    }
    .title {
        position: absolute;
        top: -15px;
        left: 15px;
        padding: 0px 5px;
        background-color: var(--background);
    }
    
    .title p {
        font-size: 24px;
        font-weight: 300;
        font-style: italic;
        color: white;
        text-align: center;
        margin: 5px;
    }

    input {
        width: 100%;
        height: 80%;
        background-color: transparent;
        border: 5px solid var(--lightPrimary);
        border-radius: 20px;
    }
</style>
