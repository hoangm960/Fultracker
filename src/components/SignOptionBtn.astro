---
const { icon, title, backgroundColor, action } = Astro.props;
---

<button class="sign-option-btn">
    <div class="icon-box">
        <img src={icon} height="90%"/>
    </div>
    <div class="sign-option-title">
        {action == "sigin" ? <p>Sign in with {title}</p> : <p>Sign up with {title}</p>}
    </div>
</button>

<style define:vars={{ backgroundColor }}>
    .sign-option-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: var(--backgroundColor);
        height: 100%;
        padding: 10px;
        border: none;
        border-radius: 20px;
    }
    
    .icon-box{
        height: 100%;
        padding-right: 10px;
    }

    p {
        color: white;
        font-size: 16px;
        font-weight: 600;
        margin: 0;
    }
</style>
