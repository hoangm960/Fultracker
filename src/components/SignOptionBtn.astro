---
import googleIcon from "@assets/icons/Google.svg";
import githubIcon from "@assets/icons/Github.svg";

class SignOption {
    constructor(
        private id: string,
        private title: string,
        private icon: string
    ) {}
}

const { id } = Astro.props;
const SignOptionMap = {
    google: new SignOption(id, "Google", googleIcon),
    github: new SignOption(id, "Github", githubIcon),
};
---
<!-- TODO: add hover and click effect -->
<button
    class="bg-highlight rounded-[20px] border-solid border-text border-4 pt-[18px] pr-5 pb-[18px] pl-5 flex flex-row gap-5 items-center justify-start shrink-0 relative"
    id={id}
>
    <div
        class="flex flex-row gap-2.5 items-start justify-start shrink-0 relative"
    >
        <img
            class="shrink-0 w-[30px] h-[30px] relative"
            src={SignOptionMap[id].icon}
        />
    </div>
    <div
        class="text-text text-left relative"
        style="font: 600 24px 'Montserrat', sans-serif"
    >
        Sign in with {SignOptionMap[id].title}
    </div>
</button>
